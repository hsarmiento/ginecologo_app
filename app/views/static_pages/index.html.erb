<%= provide(:title, 'Bienvenido a Conchalink') %>
<div class="center hero-unit">
	<h1>Bienvenido a Conchalink</h1>
	<h2>Encuentra al instante tu Ginecólogo con 1 solo click!</h2>	
	<div class="row">
		<% @clinics.each do |clinic| %>
			<div class="span4 offset1">
				<%= link_to(image_tag("ginecologo.gif", class: "img-rounded", size: "250x250"),clinic)%>
				<address>
					<strong><%= link_to clinic.name, clinic%></strong> </br>
					<%=clinic.city%>
				</address>
			</div>
		<% end%>	
	</div>
	<% if !signed_in? %>
		<div class="centerize">
			<%= link_to "Regístrese!", signup_path, class: "btn btn-large btn-primary btn-signup" %>
		</div>
	<%end %>
</div>

